@using EFPROJECT1.Models
@model Product
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<br />

<form method="post">
    <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" value="@Model.Name" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input class="form-control" value="@Model.Description" asp-for="Description" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input class="form-control" value="@Model.Price" asp-for="Price" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input class="form-control" value="@Model.Category" asp-for="Category" />
    </div>
    <div class="form-group">
        <label>Stock</label>
        <input class="form-control" value="@Model.Stock" asp-for="Stock" />
    </div>
    <br />
    <input type="submit" value="Update" class="btn btn-dark" />
    <a asp-action="Index" class="btn btn-danger">Back</a>
</form>

